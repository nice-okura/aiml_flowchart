<?xml version="1.0" encoding="UTF-8"?>
<aiml version="2.0" xmlns="http://www.sunaba.docomo.ne.jp/xaiml/">

    <category>
        <pattern>こんにちは</pattern>
        <template>こんにちは、知りたい内容を発話してください。</template>
    </category>

    <category>
        <pattern>今日の天気は？</pattern>
        <template>
            <condition name="weather">
                <li value="rain">雨です</li>
                <li value="sunny">晴れです</li>
                <li>曇りです</li>
            </condition>
        </template>
    </category>

    <category>
        <pattern>*</pattern>
        <template>別の質問をしてください</template>
    </category>

    <category>
        <pattern>#YES</pattern>
        <pattern>#yes</pattern>
        <template>
            <condition name="id">
                <li value="10" id="11">
                    <think>
                        <predstore>command=</predstore>
                        
                    </think>
                    メッセージ
                    <command><predstore>json</predstore></command>
                </li>
                <li value="12" id="13">
                    <think>
                        <predstore>command=</predstore>
                    </think>
                    12から13になります
                    <command><predstore>json</predstore></command>
                </li>
                <li>
                    その他の条件です
                </li>
            </condition>
        </template>
    </category>
</aiml>
